{
    "name": "spectxengine",
    "version": "1.0.0",
    "private": true,
    "description": "Enterprise-grade web framework for building vibe coding and production applications",
    "repository": {
        "type": "git",
        "url": "https://github.com/SpectrumLynk/SpectXEngine.git"
    },
    "scripts": {
        "dev": "pnpm --parallel --filter \"./apps/*\" dev",
        "build": "pnpm --recursive --filter \"./apps/*\" build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:e2e": "playwright test",
        "test:coverage": "vitest run --coverage",
        "type-check": "pnpm --recursive run type-check",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
        "analyze": "pnpm --filter web analyze",
        "prepare": "husky install"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.15.0",
    "devDependencies": {
        "@playwright/test": "^1.40.1",
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.18.0",
        "@typescript-eslint/parser": "^6.18.0",
        "@vitest/coverage-v8": "^1.1.3",
        "eslint": "^8.56.0",
        "eslint-config-next": "^14.0.4",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "vitest": "^1.1.3"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}